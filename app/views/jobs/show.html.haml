.container
  .row
    .dark-overlay
      .job-postings
        %h2= @job.title
        .job-desc
          - md = Redcarpet::Markdown.new(Redcarpet::Render::HTML, :autolink => true, :space_after_headers => true)
          - description = md.render(@job.description).html_safe
          = description

          .share-actions
            %a.twitter-share-button{"data-count" => "none", "data-size" => "large", "data-via" => "edeyalabs" , "data-text" => "#{@job.title}", "data-url" => job_url(@job), :href => "https://twitter.com/share"}
              Tweet
